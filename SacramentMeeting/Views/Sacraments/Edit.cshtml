@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using SacramentMeeting

@model SacramentMeeting.Models.Sacrament

@{
    ViewData["Title"] = "Edit Sacrament";
}

<h2>Edit</h2>

<h4>Sacrament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @await Html.PartialAsync("DataList")
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Presiding:</label>
                <input list="Members" placeholder="Presiding" name="Presiding" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Conducting:</label>
                <input list="Members" placeholder="Conducting" name="Conducting" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Invocation:</label>
                <input list="Members" placeholder="Invocation" name="Invocation" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="OpeningSong" class="control-label"></label>
                <input asp-for="OpeningSong" class="form-control" />
                <span asp-validation-for="OpeningSong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SacramentSong" class="control-label"></label>
                <input asp-for="SacramentSong" class="form-control" />
                <span asp-validation-for="SacramentSong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntermediateSong" class="control-label"></label>
                <input asp-for="IntermediateSong" class="form-control" />
                <span asp-validation-for="IntermediateSong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Benediction:</label>
                <input list="Members" placeholder="Benediction" name="Benediction" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ClosingSong" class="control-label"></label>
                <input asp-for="ClosingSong" class="form-control" />
                <span asp-validation-for="ClosingSong" class="text-danger"></span>
            </div>



            @await Html.PartialAsync("SpeakersList", Model.Speakers)



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
