@model IEnumerable<SacramentMeeting.Models.Sacrament>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" style="background-color:#FFDEDB">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.date)
                </th>
                <th>
                    Songs
                </th>
                <th>
                    Speakers
                </th>
                <th>
                    Presiding
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                <dl class="dl-horizontal">
                    <dt>Opening</dt>
                    <dd>@Html.DisplayFor(modelItem => item.OpeningSong)</dd>
                    <dt>Sacrement</dt>
                    <dd>@Html.DisplayFor(modelItem => item.SacramentSong)</dd>
                    @if (item.IntermediateSong != null && item.IntermediateSong != 0)
                    {<dt>Intermediate</dt><dd>@Html.DisplayFor(modelItem => item.IntermediateSong)</dd>}
                    <dt>Closing</dt><dd>@Html.DisplayFor(modelItem => item.ClosingSong)</dd>
                </dl>
            </td>
            <td>
                <ul>
                @foreach(var speaker in item.Speakers)
                {
                    <li>@speaker.Member.FullName</li>
                }
                </ul>
            </td>
            <td>
                <dl class="dl-horizontal">
                    <dt>Presiding:  </dt><dd>TBD</dd> 
                    <dt>Conducting: </dt> <dd>TBD</dd>
                </dl>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
